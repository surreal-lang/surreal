// User model with JSON serialization via derive macro

use crate::macros::json::json_encode;

/// A user with an ID and name.
#[derive(json_encode)]
pub struct User {
    id: int,
    name: string,
}

impl User {
    /// Create a new user with the given ID and name.
    pub fn new(id: int, name: string) -> User {
        User { id: id, name: name }
    }
}
